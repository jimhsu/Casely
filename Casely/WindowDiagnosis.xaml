<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Casely"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="Casely.WindowDiagnosis"
        mc:Ignorable="d"
        Title="Casely: Diagnosis" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <ComboBox x:Name="cmbCaseNumber" HorizontalAlignment="Left" Margin="77.342,16.56,0,0" VerticalAlignment="Top" Width="224.27" IsEditable="True" LostFocus="cmbCaseNumber_LostFocus" DropDownClosed="cmbCaseNumber_DropDownClosed" TabIndex="1"/>
        <Label Content="Case#" HorizontalAlignment="Left" Margin="30.345,16.56,0,0" VerticalAlignment="Top"/>
        <Label Content="Load # of past days" Margin="340.612,12.56,338.118,0" VerticalAlignment="Top" d:LayoutOverrides="Width"/>

        <xctk:IntegerUpDown x:Name="txtDaysToLoad" HorizontalAlignment="Right" Margin="0,16.56,292.118,0" VerticalAlignment="Top" Value="7" DefaultValue="7" TabIndex="2" IsTabStop="False"/>
        <StackPanel Name="spParts"  Margin="340.612,65,10,10">
            <Button x:Name="btnAddDiagnosis" Width="96.5" Content="Add Diagnosis" TabIndex="2" HorizontalAlignment="Center" Click="btnAddDiagnosis_Click"/>
        </StackPanel>
        <RichTextBox x:Name="rtxCaseReport" HorizontalAlignment="Left" Margin="10,65,0,10" Width="291.612" IsTabStop="False">
            <FlowDocument>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="btnSubmit" Content="Submit Diagnosis" HorizontalAlignment="Right" Margin="0,0,74,382.48" Click="btnSubmitDiagnosis_Click" VerticalAlignment="Bottom" Width="202" TabIndex="3" IsTabStop="False"/>

    </Grid>
</Window>
